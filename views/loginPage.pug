extends layout

block content
  
          
    <!--  .fullscreen-bg -->
     <!--    video.fullscreen-bg__video(loop='', muted='', autoplay='', poster='img/videoframe.jpg') -->

      <!--    source(src='videos/waves.mp4', type='video/mp4') -->

      .middlePage
        .page-header
          #mainLogo.h1.logo
            | Behemoths
        .panel.panel-info
          .panel-body
            .row
              .col-md-5
                a.btn.btn-block.btn-social.btn-facebook(href='/auth/facebook')
                  span.fa.fa-facebook
                  |  Sign in with Facebook
                a.btn.btn-block.btn-social.btn-twitter(href='/auth/twitter')
                  span.fa.fa-twitter
                  |  Sign in with Twitter
                a.btn.btn-block.btn-social.btn-google(href='/auth/google')
                  span.fa.fa-google
                  |  Sign in with Google
                br
                a.btn.btn-default(href='/signup') Create Account


              .col-md-7(style='height:160px')
                form.form-horizontal(type='submit', method='POST')
                  input(type='hidden', name='_csrf', value=_csrf)
                  .form-group
                    label.col-sm-3.control-label(for='email', style='color:white; font-size: 15px') Email
                    .col-sm-7
                      input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
                  .form-group
                    label.col-sm-3.control-label(for='password', style='color:white; font-size: 15px') Password
                    .col-sm-7
                      input.form-control(type='password', name='password', id='password', placeholder='Password', required)
                  .form-group
                    .col-sm-offset-3.col-sm-2
                      button.btn.btn-default(type='submit', method='POST') Login

                    .col-sm-2
                      a.btn.btn-default(href='/forgot')  Forgot Password



